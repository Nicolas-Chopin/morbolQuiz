{% extends 'base.html.twig' %}

{% block title %}Mon Morbol Quiz{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<dl class="row">
    <dt class="col-3">Nom d'utilisateur</dt>
    <dd class="col-9">{{ user.username }}</dd>
    <dt class="col-3">Adresse e-mail</dt>
    <dd class="col-9">{{ user.email }}</dd>
</dl>

<a href="{{ path('session_add') }}">Créer une session</a>

<ul>
    {% for session in sessions %}
        <li>
            <a href="{{ path('session_show', {id: session.id}) }}">{{ session.name }}</a>
            <a href="{{ path('session_overview', {id: session.id}) }}">Gérer cette partie</a>
        </li>
    {% endfor %}
</ul>

{% endblock %}