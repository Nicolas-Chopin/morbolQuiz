{% extends 'base_game.html.twig' %}

{% block title %}{{ category.name }} : {{ session.name }}{% endblock %}

{% block body %}

<div class="container-fluid">

    <h1 class="text-center">{{ category.name }} : {{ session.name }}</h1>

    <h3>{{ question.text }}</h3>
    <ul class="alpha">
        {% for answer in answers %}
            <li>{{ answer.text }}</li>
        {% endfor %}
    </ul>

    <div class="row">
        <div class="col-2">
            {% if orderInMenu == 1 %}
                <a href="{{ path('menus', {id: session.id}) }}">Retour aux Menus</a>
            {% else %}
                <a href="{{ path('menu_show', {id: session.id, orderInMenu: orderInMenu - 1}) }}">Question précédente</a>
            {% endif %}
        </div>
        <div class="col text-center">
            <span class="text-green pointer" id="soluce">
                Solution
            </span>
        </div>
        <div class="col-2">
            {% if orderInMenu == 5 %}
                <a href="{{ path('menus', {id: session.id}) }}">Retour aux Menus</a>
            {% else %}
                <a href="{{ path('menu_show', {id: session.id, orderInMenu: orderInMenu + 1}) }}">Question suivante</a>
            {% endif %}
        </div>
    </div>  

    

    



</div>
{% endblock %}
