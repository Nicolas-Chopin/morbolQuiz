<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <script src="https://kit.fontawesome.com/59c20ed50b.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}" />
        <link rel="icon" type="image/png" href="{{ asset('images/favicon.png') }}" />

        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-header mb-1">
                <a class="navbar-brand p-0 m-0" href="{{ path('index') }}">
                    <h1 class="text-green p-0 m-0">Morbol <span class="text-danger font-horse">Q</span><span class="text-warning font-horse">u</span><span class="text-danger font-horse">i</span><span class="text-warning font-horse">z</span></h1>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a href="{{ path('user_profile') }}" class="nav-item nav-link btn btn-info mr-1 text-ivory" role="button">Mon profil</a>
                            <a class="nav-item nav-link btn btn-danger text-ivory" href="{{ path('logout') }}">Logout</a>
                        {% else %}
                            <a href="{{ path('user_register') }}" class="nav-item nav-link btn btn-info mr-1 text-ivory text-ivory">Inscription</a>
                            <a class="nav-item nav-link btn btn-success text-ivory" href="{{ path('login') }}">Login</a>
                        {% endif %}
                        {% if is_granted('IS_AUTHENTICATED_FULLY') and app.user.roles[0] == 'ROLE_ADMIN' %}
                            <a class="nav-item nav-link btn btn-secondary ml-1 text-ivory" href="{{ path('admin') }}">Admin BackOffice</a>
                        {% endif %}
                    </div>
                </div>
            </nav>
        </header>
        
        {% block scores %}{% endblock %}

        <div class="pb-5">
            {% block body %}{% endblock %}
        </div>
        
        <footer class="page-footer bg-dark">
            <div class="container-fluid text-md-left border-footer">
                <div class="row"> 
                    <div class="col-12 col-lg-3 text-center footer-text">
                        <a href="{{ path('patchnotes') }}" class="text-warning">Patch notes</a>
                    </div>
                    <div class="col-12 col-lg-3 text-center footer-text">
                        <a href="{{ path('about') }}" class="text-warning">&#192; propos</a>
                    </div>
                    <div class="col-12 col-lg-3 text-center footer-text">
                        <a href="{{ path('contact') }}" class="text-warning">Contact</a>
                    </div>
                    <div class="col-12 col-lg-3 text-center footer-text">
                        <a href="{{ path('legal-mentions') }}" class="text-warning">Mentions légales</a>
                    </div>
                </div>
            </div>
            <div class="footer-copyright text-center text-green footer-text">
                © 2020 Morbol Quiz
            </div>          
          </footer>

        <script type="text/javascript" src="{{ asset('js/app.js') }}"></script>
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
